flowchart TD
    A["Led method called"] --> B{Which method?}

    B -- "init()" --> C["pinMode(pin, OUTPUT)"]
    C --> C1["digitalWrite(pin, LOW)"]
    C1 --> C2["state = false"]

    B -- "turnOn()" --> D["digitalWrite(pin, HIGH)"]
    D --> D1["state = true"]

    B -- "turnOff()" --> E["digitalWrite(pin, LOW)"]
    E --> E1["state = false"]

    B -- "toggle()" --> F{"state == true?"}
    F -- "Yes" --> G["Call turnOff()"]
    F -- "No" --> H["Call turnOn()"]

    B -- "isOn()" --> I["Return state"]

